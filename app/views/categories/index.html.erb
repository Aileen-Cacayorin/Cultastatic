<% if @categories.any? %>
  <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>

  <ul>
    <% @categories.each do |category| %>
      <li> <%= link_to category.name, category_path(category)%> | <%= link_to "Delete", category_path(category), :data => {:confirm => "Are you sure?",
        :method => "delete"} %> </li>
    <% end %>
  </ul>
<% end %>

<% if user_signed_in? %>
  <%= render 'form' %>
<% end %>
